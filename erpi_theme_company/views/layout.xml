<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Customize header  -->
    <template id="catp-comp-header" inherit_id="website.layout" name="Company Header">
        
        <!-- Assign an id  -->
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="id">catp-gheader</attribute>
        </xpath>
        <xpath expr="//div[@id='wrapwrap']/header//div[@class='navbar navbar-default navbar-static-top']" position="attributes">
            <attribute name="class">navbar navbar-default navbar-fixed-top</attribute>
        </xpath>

        <!-- Add an element after the top menu  -->
        <xpath expr="//div[@id='wrapwrap']/header/div" position="before">
            <div class="container">
                <div id="special-menu">               
                    <nav class="navbar" role="navigation">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                    
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav navbar-left">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#">Action</a></li>
                                        <li><a href="#">Another action</a></li>
                                        <li><a href="#">Something else here</a></li>
                                        <li><a href="#">Separated link</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <form action="" method="POST" class="form-inline" role="form">
                                        <div class="form-group">
                                            <label class="sr-only" for="">label</label>
                                            <input type="email" class="form-control" id="" placeholder="Input field" />
                                        </div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                                <li><a href="#">Link</a></li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </nav>
                    
                </div>
            </div>
        </xpath>
        <!-- Add an element after the top menu  -->
        <xpath expr="//div[@id='wrapwrap']/main" position="before">
            <section class="padd"></section>
        </xpath>

        <!-- Add an element after the top menu  -->
        <xpath expr="//div[@id='wrapwrap']/footer" position="replace">
            <section id="catp-comp-footer">
                <div class="container">
                    <div class="row-fluid">
                        <div class="col-md-3 col-sm-12">
                            <div class="cg-logo">
                                <img src="/erpi_theme_company/static/img/logo.png" alt="Logo"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="cg-info">
                                <h2 class="text-uppercase">
                                    Contact Info
                                </h2>
                                <ul class="cg-list">
                                    <li>
                                        <i class="fa fa-map-marker"></i>
                                        <p>Srondol Asri M1 Banyumanik, Semarang City, Central Java 50263, Indonesia.</p>
                                    </li>
                                    <li>
                                        <i class="fa fa-phone"></i>
                                        <p>024 764 95807</p>
                                    </li>
                                    <li>
                                        <i class="fa fa-envelope"></i>
                                        <p>info@erpindonesia.co.id</p>
                                    </li>   
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="cg-follow">
                                <h2 class="text-uppercase">
                                    Follow Us
                                </h2>
                                <p class="cg-socmed">
                                    <a href="#" class="afa afa-twitter"></a>
                                    <a href="#" class="afa afa-instagram"></a>
                                    <a href="#" class="afa afa-facebook"></a>
                                    <span>ERP Indonesia</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid copyright">
                    <div class="row">
                        <div class="col-xs-12">
                            <p class="text-center">Copyright <i class="fa fa-copyright"></i> 2018, All Rights Reserved.</p>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>
    

</odoo>